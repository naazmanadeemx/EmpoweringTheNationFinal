<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="#00609e" /> <!-- Blue color for checked background -->
            <stroke android:width="2dp" android:color="#FFFFFF" /> <!-- White border -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- White color for unchecked background -->
            <stroke android:width="2dp" android:color="#00609e" /> <!-- Blue border -->
        </shape>
    </item>
</selector>
