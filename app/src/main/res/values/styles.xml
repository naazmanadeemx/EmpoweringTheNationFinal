<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here -->
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <!-- Button style with custom font -->
    <style name="CustomButtonStyle">
        <item name="android:background">#00609e</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="CustomProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateTint">@color/blue</item>
        <item name="android:indeterminateTintMode">src_in</item>
    </style>
</resources>
