        <meta-data
            android:name="description"
            android:value="Empowering the Nation - Skills training for domestic workers and gardeners in Johannesburg." />
        <meta-data
            android:name="keywords"
            android:value="Skills Training, Domestic Workers, Gardeners, Empowerment, Johannesburg, Courses" />
        <meta-data
            android:name="author"
            android:value="Naazma Nadeem" />
        <meta-data
            android:name="og:title"
            android:value="Empowering the Nation App" />
        <meta-data
            android:name="og:description"
            android:value="Empowering domestic workers and gardeners through skill development in Johannesburg." />

        <activity android:name=".PaymentConfirmationActivity" android:exported="false" />
        <activity android:name=".CheckoutActivity" android:exported="false" />
        <activity android:name=".ProfileActivity" android:exported="false" />
        <activity android:name=".SettingsActivity" android:exported="false" />
        <activity android:name=".CartActivity" android:exported="false" />
        <activity android:name=".HelpActivity" android:exported="false" />
        <activity android:name=".RegisterActivity" android:exported="false" />
